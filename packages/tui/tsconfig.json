{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@oh-my-pi/pi-tui": ["./src/index.ts"],
			"@oh-my-pi/pi-tui/*": ["./src/*"],
			"@oh-my-pi/pi-ai": ["../ai/src/index.ts"],
			"@oh-my-pi/pi-ai/*": ["../ai/src/*"],
			"@oh-my-pi/pi-agent-core": ["../agent/src/index.ts"],
			"@oh-my-pi/pi-agent-core/*": ["../agent/src/*"],
			"@oh-my-pi/pi-utils": ["../pi-utils/src/index.ts"],
			"@oh-my-pi/pi-utils/*": ["../pi-utils/src/*"],
			"@oh-my-pi/pi-coding-agent": ["../coding-agent/src/index.ts"],
			"@oh-my-pi/pi-coding-agent/*": ["../coding-agent/src/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
